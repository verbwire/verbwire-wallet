{
  "compilerOptions": {
    "target": "esnext",
    //"module": "esnext",
    "module": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2018", "dom"],
    "types": ["node"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}